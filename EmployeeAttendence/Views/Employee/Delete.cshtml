@model Core.Entities.Employee

<div class="container mt-5">
    <h2 class="text-danger">Delete Employee</h2>

    <h4>Are you sure you want to delete this employee?</h4>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <dl class="row">
                <dt class="col-sm-4">Employee Code:</dt>
                <dd class="col-sm-8">@Model.EmployeeCode</dd>

                <dt class="col-sm-4">Date of Birth:</dt>
                <dd class="col-sm-8">@Model.DOB.ToString("yyyy-MM-dd")</dd>

                
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>

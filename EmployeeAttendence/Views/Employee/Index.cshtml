@model IEnumerable<Core.Entities.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <h1 class="mb-4">Employee List</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New Employee</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Employee Code</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmployeeCode</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="MarkAttendance" asp-route-id="@employee.EmployeeId" class="btn btn-primary btn-sm">Mark Attendance</a>
                                <a asp-action="ViewAttendance" asp-route-id="@employee.EmployeeId" class="btn btn-secondary btn-sm">View Attendance</a>
                                <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

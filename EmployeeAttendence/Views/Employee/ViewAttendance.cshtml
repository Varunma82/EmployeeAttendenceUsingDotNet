@model IEnumerable<Core.Entities.EmployeeAttendance>

@{
    ViewData["Title"] = "Attendance Records";
}

<div class="container mt-5">
    <h1 class="mb-4">Attendance Records</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Attendance Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var attendance in Model)
                        {
                            <tr>
                                <td>@attendance.Attendance_Date.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@attendance.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center">No attendance records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@model Core.Entities.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <h1 class="mb-4">Edit Employee</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EmployeeId" />

                <div class="form-group">
                    <label asp-for="EmployeeCode" class="font-weight-bold"></label>
                    <input asp-for="EmployeeCode" class="form-control" placeholder="Enter Employee Code" />
                    <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="font-weight-bold"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="font-weight-bold"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DOB" class="font-weight-bold"></label>
                    <input asp-for="DOB" type="date" class="form-control" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PAN" class="font-weight-bold"></label>
                    <input asp-for="PAN" class="form-control" placeholder="Enter PAN Number" />
                    <span asp-validation-for="PAN" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adhaar" class="font-weight-bold"></label>
                    <input asp-for="Adhaar" class="form-control" placeholder="Enter Aadhaar Number" />
                    <span asp-validation-for="Adhaar" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
